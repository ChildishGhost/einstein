{
	"compilerOptions": {
			"outDir": "./dist/",
			"sourceMap": true,
			"noImplicitAny": true,
			"module": "es6",
			"target": "es6",
			"lib": [
				"DOM",
				"ES6",
				"DOM.Iterable",
				"ScriptHost",
				"ES2019.Array",
				"ES2019.Object"
			],
			"allowJs": true,
			"moduleResolution": "node",
			"baseUrl": ".",
			"paths": {
					"@/*": ["src/*"],
			},
			"experimentalDecorators": true
	}
}
