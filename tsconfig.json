{
	"compilerOptions": {
		"strict": true,
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "esnext",
		"target": "es6",
		"lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost", "ES2019.Array", "ES2019.Object"],
		"allowJs": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"einstein": ["src/api"]
		},
		"experimentalDecorators": true
	}
}
